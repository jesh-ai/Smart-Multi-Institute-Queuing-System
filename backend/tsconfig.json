{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "**/*.ts", "**/*.js"],
  "exclude": ["dist", "node_modules", "public"]
}
