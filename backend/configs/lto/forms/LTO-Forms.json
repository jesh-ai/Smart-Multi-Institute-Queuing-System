              "fields": [
                {
                  "id": "form_number",
                  "fieldNumber": "form_no",
                  "label": "LTO FORM NO. 21",
                  "fieldType": "form_number",
                  "required": false
                },
                {
                  "id": "annex_number",
                  "fieldNumber": "annex",
                  "label": "Annex A",
                  "fieldType": "annex_number",
                  "required": false
                },
                {
