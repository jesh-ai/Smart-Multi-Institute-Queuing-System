                  "validation": {"maxLength": 200}
                },
                {
                  "id": "emergency_contact_no",
                  "fieldNumber": "emergency_contact",
                  "label": "EMERGENCY CONTACT NO.",
                  "fieldType": "tel",
                  "required": true
                }
              ]
            },
            {
              "id": "civil_status",
              "name": "Civil Status",
              "fields": [
                {
                  "id": "civil_status",
                  "fieldNumber": "civil_status",
                  "label": "CIVIL STATUS",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "single", "label": "1. SINGLE"},
                    {"value": "married", "label": "2. MARRIED"},
                    {"value": "widowed", "label": "3. WIDOWED"},
                    {"value": "separated", "label": "4. SEPARATED"}
                  ]
                }
              ]
            },
            {
              "id": "license_classification",
              "name": "License Classification",
              "fields": [
                {
                  "id": "license_classification",
                  "fieldNumber": "license_class",
                  "label": "LICENSE CLASSIFICATION",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "sp", "label": "1. STUDENT-DRIVER'S PERMIT (SP)"},
                    {"value": "dl", "label": "2. DRIVER'S LICENSE (DL)"},
                    {"value": "cl", "label": "3. CONDUCTOR'S LICENSE (CL)"}
                  ]
                }
              ]
            },
            {
              "id": "driving_skill_acquisition",
              "name": "Driving Skill Acquisition",
              "fields": [
                {
                  "id": "driving_skill_source",
                  "fieldNumber": "skill_source",
                  "label": "DRIVING SKILL ACQUIRED FROM (FOR DL APPLICANTS ONLY)",
                  "fieldType": "radio",
                  "required": false,
                  "options": [
                    {"value": "driving_school", "label": "1. DRIVING SCHOOL"},
                    {"value": "private_person", "label": "2. PRIVATE LICENSED PERSON"},
                    {"value": "tesda", "label": "3. TESDA"}
                  ],
                  "conditional": {
                    "show": "license_classification == 'dl'"
                  }
                },
                {
                  "id": "driving_school_name",
                  "fieldNumber": "school_name",
                  "label": "Driving School Name",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "driving_skill_source == 'driving_school'"
                  }
                },
                {
                  "id": "instructor_name",
                  "fieldNumber": "instructor",
                  "label": "Instructor Name",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "driving_skill_source == 'driving_school' OR driving_skill_source == 'tesda'"
                  }
                },
                {
                  "id": "private_dl_number",
                  "fieldNumber": "private_dl",
                  "label": "Private Licensed Person DL NO.",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "driving_skill_source == 'private_person'"
                  }
                },
                {
                  "id": "private_person_name",
                  "fieldNumber": "private_name",
                  "label": "Private Licensed Person Name",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "driving_skill_source == 'private_person'"
                  }
                },
                {
                  "id": "tesda_certification",
                  "fieldNumber": "tesda",
                  "label": "TESDA Certification",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "driving_skill_source == 'tesda'"
                  }
                }
              ]
            },
            {
              "id": "educational_attainment",
              "name": "Educational Attainment",
              "fields": [
                {
                  "id": "educational_attainment",
                  "fieldNumber": "education",
                  "label": "HIGHEST EDUCATIONAL ATTAINMENT",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "postgraduate", "label": "POSTGRADUATE"},
                    {"value": "college", "label": "COLLEGE"},
                    {"value": "high_school", "label": "HIGH SCHOOL"},
                    {"value": "elementary", "label": "ELEMENTARY"}
                  ]
                }
              ]
            },
            {
              "id": "medical_information",
              "name": "Medical Information",
              "fields": [
                {
                  "id": "blood_type",
                  "fieldNumber": "blood_type",
                  "label": "BLOOD TYPE",
                  "fieldType": "select",
                  "required": true,
                  "options": [
                    {"value": "a_plus", "label": "A+"},
                    {"value": "a_minus", "label": "A-"},
                    {"value": "b_plus", "label": "B+"},
                    {"value": "b_minus", "label": "B-"},
                    {"value": "ab_plus", "label": "AB+"},
                    {"value": "ab_minus", "label": "AB-"},
                    {"value": "o_plus", "label": "O+"},
                    {"value": "o_minus", "label": "O-"}
                  ]
                },
                {
                  "id": "organ_donor",
                  "fieldNumber": "organ_donor",
                  "label": "ORGAN DONOR",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "yes", "label": "YES"},
                    {"value": "no", "label": "NO"}
                  ]
                },
                {
                  "id": "organ_donor_choices",
                  "fieldNumber": "organ_choices",
                  "label": "Organ Donor Choices",
                  "fieldType": "checkbox_group",
                  "required": false,
                  "options": [
                    {"value": "heart", "label": "HEART"},
                    {"value": "eyes", "label": "EYES"},
                    {"value": "liver", "label": "LIVER"},
                    {"value": "bones", "label": "BONES"},
                    {"value": "kidneys", "label": "KIDNEYS"},
                    {"value": "cornea", "label": "CORNEA"},
                    {"value": "pancreas", "label": "PANCREAS"},
                    {"value": "lungs", "label": "LUNGS"},
                    {"value": "skin", "label": "SKIN"}
                  ],
                  "conditional": {
                    "show": "organ_donor == 'yes'"
                  }
                },
                {
                  "id": "eyes_color",
                  "fieldNumber": "eyes_color",
                  "label": "EYES COLOR",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"maxLength": 20}
                }
              ]
            },
            {
              "id": "application_type",
              "name": "Type of Application",
              "fields": [
                {
                  "id": "type_of_application",
                  "fieldNumber": "application_type",
                  "label": "TYPE OF APPLICATION",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "new", "label": "A. NEW"},
                    {"value": "renewal", "label": "B. RENEWAL"},
                    {"value": "conversion_foreign", "label": "C. CONVERSION OF FOREIGN DL"},
                    {"value": "additional_code", "label": "D. ADDITIONAL CODE OR CATEGORY"},
                    {"value": "change_classification", "label": "E. CHANGE OF DL CLASSIFICATION"},
                    {"value": "expired_with_valid_fdl", "label": "F. EXPIRED DL WITH VALID FDL"},
                    {"value": "duplicate", "label": "G. DUPLICATE"},
                    {"value": "dropping_category", "label": "H. DROPPING OF CATEGORY OR ADD'L OR REMOVAL OF DRIVING CONDITIONS"},
                    {"value": "revision_records", "label": "I. REVISION OF RECORDS"},
                    {"value": "enhancement", "label": "J. ENHANCEMENT OF DL"},
                    {"value": "change_clutch_type", "label": "K. CHANGE OF CLUTCH TYPE"}
                  ]
                },
                {
                  "id": "revision_type",
                  "fieldNumber": "revision_type",
                  "label": "Revision Type",
                  "fieldType": "radio",
                  "required": false,
                  "options": [
                    {"value": "change_address", "label": "I1. CHANGE ADDRESS"},
                    {"value": "change_civil_status", "label": "I2. CHANGE CIVIL STATUS"},
                    {"value": "change_name", "label": "I3. CHANGE NAME"},
                    {"value": "change_birth_date", "label": "I4. CHANGE BIRTH DATE"},
                    {"value": "others", "label": "I5. Others"}
                  ],
                  "conditional": {
                    "show": "type_of_application == 'revision_records'"
                  }
                }
              ]
            },
            {
              "id": "vehicle_categories",
              "name": "Vehicle Categories",
              "fields": [
                {
                  "id": "existing_categories",
                  "fieldNumber": "existing_cats",
                  "label": "EXISTING",
                  "fieldType": "checkbox_group",
                  "required": false,
                  "options": [
                    {"value": "A", "label": "A - MOTORCYCLE"},
                    {"value": "B", "label": "B - LIGHT VEHICLES"},
                    {"value": "B1", "label": "B1 - M2 VEHICLES"},
                    {"value": "B2", "label": "B2 - LIGHT COMMERCIAL VEHICLES"},
                    {"value": "C", "label": "C - HEAVY COMMERCIAL VEHICLES"},
                    {"value": "D", "label": "D - BUSES, COACHES"},
                    {"value": "BE", "label": "BE - ARTICULATED PASSENGER CARS"},
                    {"value": "CE", "label": "CE - HEAVY ARTICULATED VEHICLES"}
                  ]
                },
                {
                  "id": "applied_categories",
                  "fieldNumber": "applied_cats",
                  "label": "APPLIED FOR",
                  "fieldType": "checkbox_group",
                  "required": true,
                  "options": [
                    {"value": "A", "label": "A - MOTORCYCLE"},
                    {"value": "B", "label": "B - LIGHT VEHICLES"},
                    {"value": "B1", "label": "B1 - M2 VEHICLES"},
                    {"value": "B2", "label": "B2 - LIGHT COMMERCIAL VEHICLES"},
                    {"value": "C", "label": "C - HEAVY COMMERCIAL VEHICLES"},
                    {"value": "D", "label": "D - BUSES, COACHES"},
                    {"value": "BE", "label": "BE - ARTICULATED PASSENGER CARS"},
                    {"value": "CE", "label": "CE - HEAVY ARTICULATED VEHICLES"}
                  ]
                }
              ]
            },
            {
              "id": "license_details",
              "name": "License Details",
              "fields": [
                {
                  "id": "service_type",
                  "fieldNumber": "service_type",
                  "label": "SV",
                  "fieldType": "checkbox",
                  "required": false
                },
                {
                  "id": "license_type",
                  "fieldNumber": "license_type",
                  "label": "License Type",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "non_pro", "label": "NON PRO"},
                    {"value": "pro", "label": "PRO"}
                  ]
                },
                {
                  "id": "clutch_type",
                  "fieldNumber": "clutch_type",
                  "label": "CLUTCH TYPE",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "AT", "label": "AT"},
                    {"value": "MT", "label": "MT"}
                  ]
                }
              ]
            },
            {
              "id": "driving_conditions",
              "name": "Driving Conditions",
              "fields": [
                {
                  "id": "driving_conditions",
                  "fieldNumber": "conditions",
                  "label": "CONDITIONS",
                  "fieldType": "checkbox_group",
                  "required": false,
                  "options": [
                    {"value": "corrective_lenses", "label": "1. WEAR CORRECTIVE LENSES"},
                    {"value": "special_equipment", "label": "2. DRIVE ONLY W/ SPECIAL EQUIPMENT FOR UPPER LIMBS/LOWER LIMBS"},
                    {"value": "customized_vehicle", "label": "3. DRIVE CUSTOMIZED MOTOR VEHICLE ONLY"},
                    {"value": "daylight_only", "label": "4. DAYLIGHT DRIVING ONLY"},
                    {"value": "hearing_aid", "label": "5. HEARING AID IS REQUIRED"}
                  ]
                }
              ]
            },
            {
              "id": "previous_name",
              "name": "Previous Name",
              "fields": [
                {
                  "id": "previous_name_note",
                  "fieldNumber": "prev_name_note",
                  "label": "FILL THIS UP ONLY IF YOUR NAME ABOVE IS DIFFERENT FROM YOUR NAME IN PREVIOUS LICENSE",
                  "fieldType": "instruction",
                  "required": false
                },
                {
                  "id": "previous_name",
                  "fieldNumber": "prev_name",
                  "label": "PREVIOUS NAME (Family Name, First Name, Middle Name)",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 100}
                }
              ]
            },
            {
              "id": "applicant_declaration",
              "name": "Applicant Declaration",
              "fields": [
                {
                  "id": "certification",
                  "fieldNumber": "certification",
                  "label": "THIS IS TO CERTIFY UNDER PENALTY OF PERJURY THAT THE INFORMATION I HAVE GIVEN IS TRUE AND CORRECT",
                  "fieldType": "declaration",
                  "required": true,
                  "defaultValue": true
                },
                {
                  "id": "privacy_consent",
                  "fieldNumber": "privacy",
                  "label": "BY SIGNING THIS FORM, I VOLUNTARILY AUTHORIZE LTO TO ALLOW DISCLOSURE OF THE ABOVE PERSONAL INFORMATION TO ANY AUTHORIZED GOVERNMENT AGENCY",
                  "fieldType": "consent",
                  "required": true,
                  "defaultValue": true
                },
                {
                  "id": "applicant_signature",
                  "fieldNumber": "applicant_sig",
                  "label": "PRINTED NAME AND SIGNATURE",
                  "fieldType": "signature",
                  "required": true
                }
              ]
            },
            {
              "id": "lto_evaluation",
              "name": "LTO Evaluation",
              "adminOnly": true,
              "fields": [
                {
                  "id": "evaluator_certification",
                  "fieldNumber": "eval_cert",
                  "label": "TO BE ACCOMPLISHED BY LTO PERSONNEL ONLY - THIS IS TO CERTIFY THAT I HAVE CAREFULLY EVALUATED THIS APPLICATION INCLUDING THE SUPPORTING DOCUMENTS",
                  "fieldType": "evaluation_text",
                  "required": false,
                  "adminOnly": true
                },
                {
                  "id": "evaluator_signature",
                  "fieldNumber": "eval_sig",
                  "label": "PRINT NAME AND SIGNATURE (EVALUATOR)",
                  "fieldType": "signature",
                  "required": false,
                  "adminOnly": true
                }
              ]
            }
          ],
          "validationRules": {
            "personalInformation": [
              {
                "rule": "Full name, address, and contact information are required",
                "condition": "last_name IS NOT EMPTY AND first_name IS NOT EMPTY AND present_address IS NOT EMPTY AND contact_numbers IS NOT EMPTY"
              },
              {
                "rule": "Birth date, height, and weight are required",
                "condition": "birth_date IS NOT EMPTY AND height IS NOT EMPTY AND weight IS NOT EMPTY"
              }
            ],
            "licenseRequirements": [
              {
                "rule": "License classification must be selected",
                "condition": "license_classification IS NOT EMPTY"
              },
              {
                "rule": "At least one vehicle category must be selected for applied categories",
                "condition": "COUNT(applied_categories) >= 1"
              },
              {
                "rule": "License type and clutch type must be selected",
                "condition": "license_type IS NOT EMPTY AND clutch_type IS NOT EMPTY"
              }
            ],
            "conditionalRequirements": [
              {
                "rule": "If DL applicant, driving skill source must be specified",
                "condition": "license_classification == 'dl' AND driving_skill_source IS NOT EMPTY"
              },
              {
                "rule": "If revision of records, revision type must be specified",
                "condition": "type_of_application == 'revision_records' AND revision_type IS NOT EMPTY"
              }
            ],
            "medicalRequirements": [
              {
                "rule": "Blood type and eye color are required",
                "condition": "blood_type IS NOT EMPTY AND eyes_color IS NOT EMPTY"
              },
              {
                "rule": "Organ donor choice must be made",
                "condition": "organ_donor IS NOT EMPTY"
              }
            ]
          },
          "documentaryRequirements": {
            "student_permit": [
              "Birth Certificate (PSA)",
              "Valid ID",
              "Medical Certificate",
              "Drug Test Result (if required)"
            ],
            "drivers_license": [
              "Student Permit (valid for at least 1 month)",
              "Birth Certificate (PSA)",
              "Valid ID",
              "Medical Certificate",
              "Drug Test Result",
              "Theoretical and Practical Exam Certificates"
            ],
            "conductors_license": [
              "Birth Certificate (PSA)",
              "Valid ID",
              "Medical Certificate",
              "Drug Test Result"
            ]
          },
          "vehicleCategories": {
            "LIGHT": {
              "A": "MOTORCYCLE",
              "B": "Light vehicles up to 5000kg GVW",
              "B1": "Passenger vehicles with more than 8 seats",
              "B2": "Light commercial vehicles up to 3500kg"
            },
            "HEAVY": {
              "C": "Heavy commercial vehicles 3500-12000kg",
              "D": "Buses and coaches over 5000kg",
              "BE": "Articulated passenger cars",
              "CE": "Heavy articulated vehicles"
            }
          }
        }
      ]
    }
  ],
