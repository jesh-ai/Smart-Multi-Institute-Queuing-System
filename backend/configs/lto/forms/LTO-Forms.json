                {
                  "id": "tin_number",
                  "fieldNumber": "tin",
                  "label": "TIN",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 15}
                },
                {
                  "id": "nationality",
                  "fieldNumber": "nationality",
                  "label": "NATIONALITY",
                  "fieldType": "text",
                  "required": true,
                  "defaultValue": "Filipino"
                },
                {
                  "id": "sex",
                  "fieldNumber": "sex",
                  "label": "SEX (M/F)",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "M", "label": "M"},
                    {"value": "F", "label": "F"}
                  ]
                },
                {
                  "id": "birth_date",
                  "fieldNumber": "birth_date",
                  "label": "BIRTH DATE (YYYY/MM/DD)",
                  "fieldType": "date",
                  "required": true,
                  "format": "YYYY/MM/DD"
