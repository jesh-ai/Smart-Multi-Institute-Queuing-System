                {
                  "id": "license_number",
                  "fieldNumber": "license_no",
                  "label": "LICENSE NUMBER",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 14}
                },
                {
                  "id": "birthplace",
                  "fieldNumber": "birthplace",
                  "label": "BIRTHPLACE (City, Municipality, Province)",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"maxLength": 100}
                }
              ]
            },
            {
              "id": "family_information",
