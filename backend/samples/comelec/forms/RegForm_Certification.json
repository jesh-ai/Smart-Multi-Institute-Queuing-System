{
  "institutions": [
    {
      "id": "comelec",
      "name": "Commission on Elections",
      "code": "COMELEC",
      "description": "Constitutional commission responsible for enforcing election laws in the Philippines",
      "forms": [
        {
          "id": "certification_transfer_to_original",
          "formNumber": "CERT_TRANSFER_ORIGINAL",
          "title": "Certification for Transfer to Original Registration",
          "officialTitle": "CERTIFICATION",
          "description": "Certification issued when applicant for transfer is not found in voter databases and needs to apply for original registration",
          "category": "Administrative Certification",
          "version": "",
          "pages": 1,
          "totalFields": 18,
          "sections": [
            {
              "id": "certification_header",
              "name": "Certification Header",
              "fields": [
                {
                  "id": "certification_title",
                  "fieldNumber": "title",
                  "label": "CERTIFICATION",
                  "fieldType": "header",
                  "required": false,
                  "defaultValue": "CERTIFICATION"
                }
              ]
            },
            {
              "id": "applicant_information",
              "name": "Applicant Information",
              "fields": [
                {
                  "id": "applicant_details",
                  "fieldNumber": "applicant_info",
                  "label": "This is to certify that [Name], born on [Date], [Civil Status] [Spouse if married], a resident of [Address], personally appeared in this office to apply for transfer of registration record.",
                  "fieldType": "applicant_details_group",
                  "required": true,
                  "components": [
                    {
                      "id": "applicant_name",
                      "label": "Applicant Name",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"minLength": 1, "maxLength": 100}
                    },
                    {
                      "id": "birth_date",
                      "label": "Date of Birth",
                      "fieldType": "date",
                      "required": true,
                      "format": "MM/DD/YYYY"
                    },
                    {
                      "id": "civil_status",
                      "label": "Civil Status",
                      "fieldType": "select",
                      "required": true,
                      "options": [
                        {"value": "single", "label": "single"},
                        {"value": "widow", "label": "widow/er"},
                        {"value": "legally_separated", "label": "legally separated"},
                        {"value": "married", "label": "married"}
                      ]
                    },
                    {
                      "id": "spouse_name",
                      "label": "Spouse Name (if married)",
                      "fieldType": "text",
                      "required": false,
                      "validation": {"maxLength": 100},
                      "conditional": {
                        "show": "civil_status == 'married'"
                      }
                    },
                    {
                      "id": "residence_address",
                      "label": "Residence Address",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"minLength": 1, "maxLength": 150}
                    }
                  ]
                }
              ]
            },
            {
              "id": "verification_statement",
              "name": "Verification Statement",
              "fields": [
                {
                  "id": "database_verification",
                  "fieldNumber": "verification",
                  "label": "However, his name is not included in the Local Voter's Registration Database (LVRD) or in the printed Lists of Voters (PLVs)/ Printed Lists of Deactivated Voters (PLDVs) per verification conducted by the undersigned.",
                  "fieldType": "verification_statement",
                  "required": true,
                  "defaultValue": "However, his name is not included in the Local Voter's Registration Database (LVRD) or in the printed Lists of Voters (PLVs)/ Printed Lists of Deactivated Voters (PLDVs) per verification conducted by the undersigned."
                }
              ]
            },
            {
              "id": "recommendation_section",
              "name": "Recommendation",
              "fields": [
                {
                  "id": "original_registration_advice",
                  "fieldNumber": "recommendation",
                  "label": "Hence, pursuant to the Rules and Regulations on the Resumption of the System of Continuing Registration of Voters and providing for the use of Voters Registration Machines (VRMs) Nationwide, above-named applicant is hereby advised to apply for original registration.",
                  "fieldType": "recommendation_text",
                  "required": true,
                  "defaultValue": "Hence, pursuant to the Rules and Regulations on the Resumption of the System of Continuing Registration of Voters and providing for the use of Voters Registration Machines (VRMs) Nationwide, above-named applicant is hereby advised to apply for original registration."
                }
              ]
            },
            {
              "id": "purpose_statement",
              "name": "Purpose Statement",
              "fields": [
                {
                  "id": "legal_purpose",
                  "fieldNumber": "purpose",
                  "label": "This certification is issued for whatever legal purpose it may serve.",
                  "fieldType": "purpose_text",
                  "required": true,
                  "defaultValue": "This certification is issued for whatever legal purpose it may serve."
                }
              ]
            },
            {
              "id": "issuance_details",
              "name": "Issuance Details",
              "fields": [
                {
                  "id": "issuance_information",
                  "fieldNumber": "issuance",
                  "label": "Done this [Date] in the City/Municipality of [City], Province of [Province], Region [Region].",
                  "fieldType": "issuance_group",
                  "required": true,
                  "components": [
                    {
                      "id": "issuance_date",
                      "label": "Date",
                      "fieldType": "date_parts",
                      "required": true,
                      "components": [
                        {
                          "id": "day",
                          "label": "Day",
                          "fieldType": "number",
                          "required": true,
                          "min": 1,
                          "max": 31
                        },
                        {
                          "id": "month",
                          "label": "Month",
                          "fieldType": "text",
                          "required": true
                        },
                        {
                          "id": "year",
                          "label": "Year",
                          "fieldType": "number",
                          "required": true,
                          "min": 2020,
                          "max": 2030
                        }
                      ]
                    },
                    {
                      "id": "city_municipality",
                      "label": "City/Municipality",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"maxLength": 50}
                    },
                    {
                      "id": "province",
                      "label": "Province",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"maxLength": 50}
                    },
                    {
                      "id": "region",
                      "label": "Region",
                      "fieldType": "select",
                      "required": true,
                      "options": [
                        {"value": "ncr", "label": "National Capital Region (NCR)"},
                        {"value": "car", "label": "Cordillera Administrative Region (CAR)"},
                        {"value": "region_i", "label": "Region I - Ilocos Region"},
                        {"value": "region_ii", "label": "Region II - Cagayan Valley"},
                        {"value": "region_iii", "label": "Region III - Central Luzon"},
                        {"value": "region_iv_a", "label": "Region IV-A - CALABARZON"},
                        {"value": "region_iv_b", "label": "Region IV-B - MIMAROPA"},
                        {"value": "region_v", "label": "Region V - Bicol Region"},
                        {"value": "region_vi", "label": "Region VI - Western Visayas"},
                        {"value": "region_vii", "label": "Region VII - Central Visayas"},
                        {"value": "region_viii", "label": "Region VIII - Eastern Visayas"},
                        {"value": "region_ix", "label": "Region IX - Zamboanga Peninsula"},
                        {"value": "region_x", "label": "Region X - Northern Mindanao"},
                        {"value": "region_xi", "label": "Region XI - Davao Region"},
                        {"value": "region_xii", "label": "Region XII - SOCCSKSARGEN"},
                        {"value": "region_xiii", "label": "Region XIII - Caraga"},
                        {"value": "barmm", "label": "Bangsamoro Autonomous Region in Muslim Mindanao (BARMM)"}
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "id": "election_officer_section",
              "name": "Election Officer Signature",
              "adminOnly": true,
              "fields": [
                {
                  "id": "eo_signature",
                  "fieldNumber": "eo_sig",
                  "label": "Election Officer",
                  "fieldType": "signature_group",
                  "required": true,
                  "adminOnly": true,
                  "components": [
                    {
                      "id": "signature",
                      "label": "Signature",
                      "fieldType": "signature",
                      "required": true
                    },
                    {
                      "id": "printed_name",
                      "label": "Printed Name",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"minLength": 1, "maxLength": 100}
                    }
                  ],
                  "instructions": "Signature over Printed Name"
                }
              ]
            }
          ],
          "validationRules": {
            "applicantRequirements": [
              {
                "rule": "Applicant must have personally appeared at the office",
                "condition": "applicant_name IS NOT EMPTY"
              },
              {
                "rule": "Complete residence address must be provided",
                "condition": "residence_address IS NOT EMPTY"
              },
              {
                "rule": "If married, spouse name must be provided",
                "condition": "civil_status == 'married' AND spouse_name IS NOT EMPTY"
              }
            ],
            "verificationRequirements": [
              {
                "rule": "Database verification must be conducted and documented",
                "condition": "database_verification == true"
              }
            ],
            "issuanceRequirements": [
              {
                "rule": "Complete issuance location must be provided",
                "condition": "city_municipality IS NOT EMPTY AND province IS NOT EMPTY AND region IS NOT EMPTY"
              },
              {
                "rule": "Election Officer must sign the certification",
                "condition": "signature IS NOT EMPTY AND printed_name IS NOT EMPTY"
              }
            ]
          },
          "businessRules": {
            "purpose": "This certification is issued when an applicant for transfer of registration record is not found in any voter database and needs to be advised to apply for original registration instead.",
            "databaseChecks": [
