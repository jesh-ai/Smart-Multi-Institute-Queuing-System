{
  "institutions": [
    {
      "id": "dfa",
      "name": "Department of Foreign Affairs",
      "code": "DFA",
      "description": "Government agency responsible for foreign relations and passport services in the Philippines",
      "forms": [
        {
          "id": "oca_pdo_51a_passport_certification",
          "formNumber": "OCA-PDO-51A",
          "title": "Passport Record Certification Request Form",
          "officialTitle": "OFFICE OF CONSULAR AFFAIRS - Passport Division - PASSPORT RECORD CERTIFICATION REQUEST FORM",
          "description": "Form for requesting certified true copy of passport, certificate of passport issuance, or certificate of no passport",
          "category": "Passport Certification",
          "version": "Rev-01-June-2020",
          "pages": 1,
          "totalFields": 16,
          "sections": [
            {
              "id": "form_header",
              "name": "Form Header",
              "fields": [
                {
                  "id": "agency_header",
                  "fieldNumber": "agency",
                  "label": "OFFICE OF CONSULAR AFFAIRS",
                  "fieldType": "header",
                  "required": false
                },
                {
                  "id": "division_header",
                  "fieldNumber": "division",
                  "label": "Passport Division",
                  "fieldType": "subheader",
                  "required": false
                },
                {
                  "id": "form_title",
                  "fieldNumber": "title",
                  "label": "PASSPORT RECORD CERTIFICATION REQUEST FORM",
                  "fieldType": "form_title",
                  "required": false
                }
              ]
            },
            {
              "id": "request_date",
              "name": "Request Date",
              "fields": [
                {
                  "id": "request_date",
                  "fieldNumber": "date",
                  "label": "Date",
                  "fieldType": "date",
                  "required": true,
                  "format": "MM/DD/YYYY"
                }
              ]
            },
            {
              "id": "addressee",
              "name": "Addressee",
              "fields": [
                {
                  "id": "addressee",
                  "fieldNumber": "addressee",
                  "label": "The Director, Passport Division, Madam:",
                  "fieldType": "addressee_text",
                  "required": false,
                  "defaultValue": "The Director\nPassport Division\nMadam:"
                }
              ]
            },
            {
              "id": "requestor_information",
              "name": "Requestor Information",
              "fields": [
                {
                  "id": "requestor_declaration",
                  "fieldNumber": "declaration",
                  "label": "I, [Requestor Name], would like to request for the issuance of:",
                  "fieldType": "declaration_group",
                  "required": true,
                  "components": [
                    {
                      "id": "requestor_name",
                      "label": "Requestor Name",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"minLength": 1, "maxLength": 100}
                    }
                  ]
                },
                {
                  "id": "certification_type",
                  "fieldNumber": "cert_type",
                  "label": "Certification Type (please check one):",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "certified_true_copy", "label": "Certified True Copy of Passport"},
                    {"value": "certificate_issuance", "label": "Certificate of Passport Issuance"},
                    {"value": "certificate_no_passport", "label": "Certificate of No Passport"}
                  ]
                }
              ]
            },
            {
              "id": "passport_details",
              "name": "Passport Details",
              "fields": [
                {
                  "id": "passport_details_header",
                  "fieldNumber": "details_header",
                  "label": "with the following details",
                  "fieldType": "section_header",
                  "required": false
                },
                {
                  "id": "passport_number",
                  "fieldNumber": "passport_no",
                  "label": "Passport Number",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 20},
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                },
                {
                  "id": "place_of_issue",
                  "fieldNumber": "issue_place",
                  "label": "Place of Issue",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 50},
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                },
                {
                  "id": "date_of_issue",
                  "fieldNumber": "issue_date",
                  "label": "Date of Issue",
                  "fieldType": "date",
                  "required": false,
                  "format": "MM/DD/YYYY",
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                }
              ]
            },
            {
              "id": "personal_information",
              "name": "Personal Information",
              "fields": [
                {
                  "id": "last_name",
                  "fieldNumber": "last_name",
                  "label": "Last Name",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 50}
                },
                {
                  "id": "given_name",
                  "fieldNumber": "given_name",
                  "label": "Given Name",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 50}
                },
                {
                  "id": "middle_name",
                  "fieldNumber": "middle_name",
                  "label": "Middle Name",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 50}
                },
                {
                  "id": "date_of_birth",
                  "fieldNumber": "dob",
                  "label": "Date of Birth",
                  "fieldType": "date",
                  "required": true,
                  "format": "MM/DD/YYYY"
                },
                {
                  "id": "place_of_birth",
                  "fieldNumber": "pob",
                  "label": "Place of Birth",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"maxLength": 100}
                },
                {
                  "id": "sex",
                  "fieldNumber": "sex",
                  "label": "Sex",
                  "fieldType": "select",
                  "required": true,
                  "options": [
                    {"value": "male", "label": "Male"},
                    {"value": "female", "label": "Female"}
                  ]
                }
              ]
            },
            {
              "id": "request_details",
              "name": "Request Details",
              "fields": [
                {
                  "id": "country_of_destination",
                  "fieldNumber": "destination",
                  "label": "Country of destination",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 50}
                },
                {
                  "id": "purpose_of_request",
                  "fieldNumber": "purpose",
                  "label": "Purpose of request",
                  "fieldType": "textarea",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 200},
                  "placeholder": "Please specify the purpose for this certification request"
                }
              ]
            },
            {
              "id": "requestor_verification",
              "name": "Requestor Verification",
              "fields": [
                {
                  "id": "signature",
                  "fieldNumber": "signature",
                  "label": "SIGNATURE OVER PRINTED NAME",
                  "fieldType": "signature",
                  "required": true
                },
                {
                  "id": "contact_numbers",
                  "fieldNumber": "contact",
                  "label": "Contact Number/s",
                  "fieldType": "tel",
                  "required": true,
                  "pattern": "09[0-9]{9}",
                  "placeholder": "09171234567"
                },
                {
                  "id": "email_address",
                  "fieldNumber": "email",
                  "label": "E-mail address",
                  "fieldType": "email",
                  "required": true,
                  "validation": {"maxLength": 100}
                }
              ]
            }
          ],
          "validationRules": {
            "requestorInformation": [
              {
                "rule": "Requestor name must be provided",
                "condition": "requestor_name IS NOT EMPTY"
              },
              {
                "rule": "Certification type must be selected",
                "condition": "certification_type IS NOT EMPTY"
              }
            ],
            "personalInformation": [
              {
                "rule": "Last name, given name, and date of birth are required",
                "condition": "last_name IS NOT EMPTY AND given_name IS NOT EMPTY AND date_of_birth IS NOT EMPTY"
              },
              {
                "rule": "Place of birth is required",
                "condition": "place_of_birth IS NOT EMPTY"
              },
              {
                "rule": "Sex must be specified",
                "condition": "sex IS NOT EMPTY"
              }
            ],
            "conditionalRequirements": [
              {
                "rule": "For passport copy or issuance certificate, passport details are required",
                "condition": "certification_type IN ['certified_true_copy', 'certificate_issuance'] AND passport_number IS NOT EMPTY AND place_of_issue IS NOT EMPTY AND date_of_issue IS NOT EMPTY"
              },
              {
                "rule": "For certificate of no passport, passport details should not be provided",
                "condition": "certification_type == 'certificate_no_passport' AND (passport_number IS EMPTY AND place_of_issue IS EMPTY AND date_of_issue IS EMPTY)"
              }
            ],
            "requestDetails": [
              {
                "rule": "Purpose of request must be specified",
                "condition": "purpose_of_request IS NOT EMPTY"
              },
              {
                "rule": "Contact information is required",
                "condition": "contact_numbers IS NOT EMPTY AND email_address IS NOT EMPTY"
              },
              {
                "rule": "Signature is required",
                "condition": "signature IS NOT EMPTY"
              }
            ]
          },
          "businessRules": {
            "certificationTypes": {
              "certified_true_copy": {
                "description": "Certified true copy of the actual passport pages",
                "requirements": ["Passport number", "Place of issue", "Date of issue"],
                "purpose": "For legal, immigration, or authentication purposes requiring actual passport copy"
              },
              "certificate_issuance": {
                "description": "Certificate confirming passport issuance details",
                "requirements": ["Passport number", "Place of issue", "Date of issue"],
                "purpose": "For verification of passport issuance without providing actual copy"
              },
              "certificate_no_passport": {
                "description": "Certificate confirming no passport has been issued",
                "requirements": [],
                "purpose": "For legal or administrative purposes requiring confirmation of no passport issuance"
              }
            },
            "processingWorkflow": {
              "verification": [
                "Identity verification of requestor",
                "Database search for passport records",
                "Validation of provided information"
              ],
              "issuance": [
                "Preparation of requested certification",
                "Quality control check",
                "Official signing and sealing"
              ],
              "delivery": [
                "Notification to requestor",
                "Pickup or delivery arrangement",
                "Record keeping"
              ]
            },
            "commonPurposes": [
              "Visa applications",
              "Employment requirements",
              "Legal proceedings",
              "Immigration purposes",
              "Academic applications",
              "Business transactions"
            ]
          },
          "documentaryRequirements": {
            "general": [
              "Valid government-issued ID",
              "Proof of relationship (if requesting for another person)",
              "Authorization letter (if applicable)"
            ],
            "specific": [
              {
                "type": "certified_true_copy",
                "requirements": ["Original passport for verification (if available)"]
              },
              {
                "type": "certificate_issuance", 
                "requirements": ["Passport details or previous passport copy"]
              },
              {
                "type": "certificate_no_passport",
                "requirements": ["Birth certificate or other identity documents"]
              }
            ]
          },
          "serviceInformation": {
            "processingTime": "3-5 working days",
            "validity": "Varies by receiving institution",
            "fees": "Subject to DFA fee schedule",
            "authentication": "May require further authentication for foreign use"
          }
        }
      ]
    }
  ],
  "metadata": {
    "version": "1.0",
    "lastUpdated": "2024-01-15",
    "formats": {
      "date": "MM/DD/YYYY",
      "phone": "09XXXXXXXXX"
    }
  }
}