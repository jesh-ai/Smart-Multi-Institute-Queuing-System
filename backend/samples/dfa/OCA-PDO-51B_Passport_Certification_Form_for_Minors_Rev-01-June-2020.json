{
  "institutions": [
    {
      "id": "dfa",
      "name": "Department of Foreign Affairs",
      "code": "DFA",
      "description": "Government agency responsible for foreign relations and passport services in the Philippines",
      "forms": [
        {
          "id": "oca_pdo_51b_passport_certification_minors",
          "formNumber": "DFA-OCA-PDO-51-B",
          "title": "Passport Record Certification Request Form for Minors",
          "officialTitle": "OFFICE OF CONSULAR AFFAIRS - Passport Division - PASSPORT RECORD CERTIFICATION REQUEST FORM",
          "description": "Form for requesting passport certifications for minor applicants (below 18 years old)",
          "category": "Passport Certification",
          "version": "Rev-01-June-2020",
          "pages": 1,
          "totalFields": 18,
          "sections": [
            {
              "id": "form_header",
              "name": "Form Header",
              "fields": [
                {
                  "id": "form_number",
                  "fieldNumber": "form_no",
                  "label": "DFA-OCA-PDO-51-B",
                  "fieldType": "form_number",
                  "required": false
                },
                {
                  "id": "version",
                  "fieldNumber": "version",
                  "label": "REV. 01/June 2020",
                  "fieldType": "version",
                  "required": false
                },
                {
                  "id": "agency_header",
                  "fieldNumber": "agency",
                  "label": "OFFICE OF CONSULAR AFFAIRS",
                  "fieldType": "header",
                  "required": false
                },
                {
                  "id": "division_header",
                  "fieldNumber": "division",
                  "label": "Passport Division",
                  "fieldType": "subheader",
                  "required": false
                },
                {
                  "id": "form_title",
                  "fieldNumber": "title",
                  "label": "PASSPORT RECORD CERTIFICATION REQUEST FORM",
                  "fieldType": "form_title",
                  "required": false
                }
              ]
            },
            {
              "id": "request_date",
              "name": "Request Date",
              "fields": [
                {
                  "id": "request_date",
                  "fieldNumber": "date",
                  "label": "Date",
                  "fieldType": "date",
                  "required": true,
                  "format": "MM/DD/YYYY"
                }
              ]
            },
            {
              "id": "addressee",
              "name": "Addressee",
              "fields": [
                {
                  "id": "addressee",
                  "fieldNumber": "addressee",
                  "label": "The Director, Passport Division, Madam:",
                  "fieldType": "addressee_text",
                  "required": false,
                  "defaultValue": "The Director\nPassport Division\nMadam:"
                }
              ]
            },
            {
              "id": "requestor_information",
              "name": "Requestor Information",
              "fields": [
                {
                  "id": "requestor_declaration",
                  "fieldNumber": "declaration",
                  "label": "I, [Requestor Name], requests issuance of a (please check one)",
                  "fieldType": "declaration_group",
                  "required": true,
                  "components": [
                    {
                      "id": "requestor_name",
                      "label": "Requestor Name",
                      "fieldType": "text",
                      "required": true,
                      "validation": {"minLength": 1, "maxLength": 100}
                    }
                  ]
                },
                {
                  "id": "certification_type",
                  "fieldNumber": "cert_type",
                  "label": "Certification Type (please check one):",
                  "fieldType": "radio",
                  "required": true,
                  "options": [
                    {"value": "certified_true_copy", "label": "Certified True Copy of Passport"},
                    {"value": "certificate_issuance", "label": "Certificate of Passport Issuance"},
                    {"value": "certificate_no_passport", "label": "Certificate of No Passport Issuance"}
                  ]
                }
              ]
            },
            {
              "id": "minor_applicant_information",
              "name": "Minor Applicant Information",
              "fields": [
                {
                  "id": "minor_applicant_name",
                  "fieldNumber": "minor_name",
                  "label": "for minor applicant",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 100}
                },
                {
                  "id": "passport_number",
                  "fieldNumber": "passport_no",
                  "label": "with passport number",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 20},
                  "instructions": "Write 'NA' in the blank for passport number if requesting a certificate of no passport issuance",
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                }
              ]
            },
            {
              "id": "passport_details",
              "name": "Passport Details",
              "fields": [
                {
                  "id": "details_instructions",
                  "fieldNumber": "instructions",
                  "label": "with the following details (leave the succeeding sections blank if requesting a certificate of no passport issuance):",
                  "fieldType": "instruction_text",
                  "required": false
                },
                {
                  "id": "place_of_issue",
                  "fieldNumber": "issue_place",
                  "label": "Place of Issue",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 50},
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                },
                {
                  "id": "date_of_issue",
                  "fieldNumber": "issue_date",
                  "label": "Date of Issue",
                  "fieldType": "date",
                  "required": false,
                  "format": "MM/DD/YYYY",
                  "conditional": {
                    "show": "certification_type IN ['certified_true_copy', 'certificate_issuance']"
                  }
                }
              ]
            },
            {
              "id": "minor_personal_information",
              "name": "Minor Personal Information",
              "fields": [
                {
                  "id": "last_name",
                  "fieldNumber": "last_name",
                  "label": "Last Name",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 50}
                },
                {
                  "id": "given_name",
                  "fieldNumber": "given_name",
                  "label": "Given Name",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 50}
                },
                {
                  "id": "middle_name",
                  "fieldNumber": "middle_name",
                  "label": "Middle Name",
                  "fieldType": "text",
                  "required": false,
                  "validation": {"maxLength": 50}
                },
                {
                  "id": "date_of_birth",
                  "fieldNumber": "dob",
                  "label": "Date of Birth",
                  "fieldType": "date",
                  "required": true,
                  "format": "MM/DD/YYYY",
                  "validation": {
                    "maxDate": "today - 18 years",
                    "minDate": "1900-01-01"
                  }
                },
                {
                  "id": "place_of_birth",
                  "fieldNumber": "pob",
                  "label": "Place of Birth",
                  "fieldType": "text",
                  "required": true,
                  "validation": {"maxLength": 100}
                },
                {
                  "id": "sex",
                  "fieldNumber": "sex",
                  "label": "Sex",
                  "fieldType": "select",
                  "required": true,
                  "options": [
                    {"value": "male", "label": "Male"},
                    {"value": "female", "label": "Female"}
                  ]
                }
              ]
            },
            {
              "id": "request_details",
              "name": "Request Details",
              "fields": [
                {
                  "id": "purpose_of_request",
                  "fieldNumber": "purpose",
                  "label": "Purpose of request",
                  "fieldType": "textarea",
                  "required": true,
                  "validation": {"minLength": 1, "maxLength": 200},
                  "placeholder": "Please specify the purpose for this certification request"
                }
              ]
            },
            {
              "id": "parent_guardian_verification",
              "name": "Parent/Guardian Verification",
              "fields": [
                {
                  "id": "signature",
                  "fieldNumber": "signature",
                  "label": "SIGNATURE OVER PRINTED NAME OF PARENT OR LEGAL GUARDIAN",
                  "fieldType": "signature",
                  "required": true
                },
                {
                  "id": "relationship_to_minor",
                  "fieldNumber": "relationship",
                  "label": "Relationship to Minor",
                  "fieldType": "select",
                  "required": true,
                  "options": [
                    {"value": "father", "label": "Father"},
                    {"value": "mother", "label": "Mother"},
                    {"value": "legal_guardian", "label": "Legal Guardian"},
                    {"value": "grandparent", "label": "Grandparent"},
                    {"value": "aunt_uncle", "label": "Aunt/Uncle"},
                    {"value": "sibling", "label": "Sibling"},
                    {"value": "other", "label": "Other"}
                  ]
                },
                {
                  "id": "other_relationship",
                  "fieldNumber": "other_relationship",
                  "label": "Other Relationship (specify)",
                  "fieldType": "text",
                  "required": false,
                  "conditional": {
                    "show": "relationship_to_minor == 'other'"
                  }
                },
                {
                  "id": "contact_numbers",
                  "fieldNumber": "contact",
                  "label": "Contact Number/s",
                  "fieldType": "tel",
                  "required": true,
                  "pattern": "09[0-9]{9}",
                  "placeholder": "09171234567"
                },
                {
                  "id": "email_address",
                  "fieldNumber": "email",
                  "label": "E-mail address",
                  "fieldType": "email",
                  "required": true,
                  "validation": {"maxLength": 100}
                }
              ]
            }
          ],
          "validationRules": {
            "requestorInformation": [
              {
                "rule": "Requestor name must be provided",
                "condition": "requestor_name IS NOT EMPTY"
              },
              {
                "rule": "Certification type must be selected",
                "condition": "certification_type IS NOT EMPTY"
              }
            ],
            "minorInformation": [
              {
                "rule": "Minor applicant name must be provided",
                "condition": "minor_applicant_name IS NOT EMPTY"
              },
              {
                "rule": "Minor must be under 18 years old",
                "condition": "date_of_birth <= today - 18 years"
              }
            ],
            "personalInformation": [
              {
                "rule": "Minor's last name, given name, and date of birth are required",
                "condition": "last_name IS NOT EMPTY AND given_name IS NOT EMPTY AND date_of_birth IS NOT EMPTY"
              },
              {
                "rule": "Minor's place of birth is required",
                "condition": "place_of_birth IS NOT EMPTY"
              },
              {
                "rule": "Minor's sex must be specified",
                "condition": "sex IS NOT EMPTY"
              }
            ],
            "conditionalRequirements": [
              {
                "rule": "For passport copy or issuance certificate, passport details are required",
                "condition": "certification_type IN ['certified_true_copy', 'certificate_issuance'] AND passport_number IS NOT EMPTY AND place_of_issue IS NOT EMPTY AND date_of_issue IS NOT EMPTY"
              },
              {
                "rule": "For certificate of no passport, passport details should be left blank",
                "condition": "certification_type == 'certificate_no_passport' AND (passport_number IS EMPTY AND place_of_issue IS EMPTY AND date_of_issue IS EMPTY)"
              }
            ],
            "parentGuardianRequirements": [
              {
                "rule": "Relationship to minor must be specified",
                "condition": "relationship_to_minor IS NOT EMPTY"
              },
              {
                "rule": "If relationship is 'other', specification is required",
                "condition": "relationship_to_minor == 'other' AND other_relationship IS NOT EMPTY"
              },
              {
                "rule": "Parent/guardian signature is required",
                "condition": "signature IS NOT EMPTY"
              },
              {
                "rule": "Contact information is required",
                "condition": "contact_numbers IS NOT EMPTY AND email_address IS NOT EMPTY"
              }
            ],
            "requestDetails": [
              {
                "rule": "Purpose of request must be specified",
                "condition": "purpose_of_request IS NOT EMPTY"
              }
            ]
          },
          "businessRules": {
            "minorDefinition": "Applicants below 18 years of age",
            "certificationTypes": {
              "certified_true_copy": {
                "description": "Certified true copy of the minor's actual passport pages",
                "requirements": ["Passport number", "Place of issue", "Date of issue"],
                "authorization": "Parent or legal guardian consent required"
              },
              "certificate_issuance": {
                "description": "Certificate confirming minor's passport issuance details",
                "requirements": ["Passport number", "Place of issue", "Date of issue"],
                "authorization": "Parent or legal guardian consent required"
              },
              "certificate_no_passport": {
                "description": "Certificate confirming no passport has been issued to the minor",
                "requirements": [],
                "authorization": "Parent or legal guardian consent required"
              }
            },
            "authorizedRequestors": [
              "Biological Parents",
              "Legal Guardians (with court documents)",
              "Adoptive Parents",
              "Foster Parents (with authorization)",
              "Grandparents (with authorization)",
              "Other relatives (with special authorization)"
            ],
            "commonPurposesForMinors": [
              "Visa applications for family travel",
              "School applications abroad",
              "Medical treatment overseas",
              "Family reunification",
              "Adoption proceedings",
              "Legal guardianship cases"
            ]
          },
          "documentaryRequirements": {
            "general": [
              "Birth Certificate of minor (PSA)",
              "Valid government-issued ID of parent/guardian",
              "Marriage Certificate of parents (if applicable)"
            ],
            "specific": [
              {
                "type": "legal_guardian",
                "requirements": ["Court order or guardianship papers"]
              },
              {
                "type": "adoptive_parents",
                "requirements": ["Adoption papers or certificate"]
              },
              {
                "type": "other_relative",
                "requirements": ["Special Power of Attorney from parents", "Valid IDs"]
              }
            ],
            "additional": [
              "Previous passport of minor (if applicable)",
              "School ID (for verification)",
              "Other supporting documents as required"
            ]
          },
          "legalConsiderations": {
            "parentalConsent": "Both parents' consent generally required unless sole custody is proven",
            "guardianship": "Legal guardians must provide court-appointed documentation",
            "specialCases": "Special procedures for minors with single parents, deceased parents, or special circumstances"
          }
        }
      ]
    }
  ],
  "metadata": {
    "version": "1.0",
    "lastUpdated": "2024-01-15",
    "formats": {
      "date": "MM/DD/YYYY",
      "phone": "09XXXXXXXXX"
    }
  }
}